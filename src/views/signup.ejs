<%- include("partials/header") %>

  <main class="container py-4">

    <h1>Inscription</h1>

    <% if (locals.error) {%>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
      <% } %>

        <form action="/signup" method="POST">
          <label class="form-label h4" for="firstname">Prénom</label>
          <input class="form-control mb-4" type="firstname" id="firstname" name="firstname" placeholder="Prénom" required>

          <label class="form-label h4" for="lastname">Nom</label>
          <input class="form-control mb-4" type="lastname" id="lastname" name="lastname" placeholder="Nom" required>

          <label class="form-label h4" for="email">Email</label>
          <input class="form-control mb-4" type="email" id="email" name="email" placeholder="email@domain.com" required>

          <label class="form-label h4" for="password">Mot de passe </label>
          <span><i> (de 8 à 20 caractères, 1 majuscule, 1 minuscule, 1 chiffre et 1 symbole)</i></span>
          <input class="form-control" type="password" id="password" name="password" placeholder="*********" required>

          <label class="form-label h4" for="confirmation">Confirmez le Mot de passe</label>
          <input class="form-control" type="password" id="confirmation" name="confirmation" placeholder="*********" required>

          <input class="btn btn-primary d-block my-4 mx-auto" type="submit" value="S'inscrire">
        </form>

  </main>
  <%- include("partials/footer") %>